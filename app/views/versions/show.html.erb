<script type="text/javascript"> 

   var address = '<%= @version.name%>, <%= @version.street%>, <%= @version.city%>, <%= @version.country%>';

   var map = new google.maps.Map(document.getElementById('map'), { 
       mapTypeId: google.maps.MapTypeId.ROADMAP,
       zoom: 18
   });

   var geocoder = new google.maps.Geocoder();

   geocoder.geocode({
      'address': address
   }, 
   function(results, status) {
      if(status == google.maps.GeocoderStatus.OK) {
         new google.maps.Marker({
            position: results[0].geometry.location,
            map: map
         });
         map.setCenter(results[0].geometry.location);
      }
   });

   </script> 
                        <div id="googleMap" style="width:inherit;height:230px;"></div>
                      </div>
                      <div id="direction" class="tab-pane fade">
                        <br>
                        <p><%= @version.direction %></p>
                      </div>
                      <div id="video" class="tab-pane fade">
                        <% if @version.link.present? %>
                          <% if @version.link.include? "watch?v=" %>
                            <% url =  @version.link.split('watch?v=', @version.link.length) %>
                            <% p source = "https://www.youtube.com/embed/"+url[1]+"?rel=0" %>
                            <iframe width="420px" height="227px" src="<%= source %>" allowfullscreen></iframe>
                          <% else %>
                            <%= image_tag("image_not.png", height: '227px' , width: '420px' , :alt => "Not Available") %>
                          <% end %>
                        <% else %>
                          <%= image_tag("image_not.png", height: '227px' , width: '420px', :alt => "Not Available") %>
                        <% end %>
                        
                      </div>
                      <div id="report" class="tab-pane fade">
                        <h4 style="color: #009ce2">Prayer area no longer exists? <strong style="color: #f29100">Help Us</strong> update this entry</h4>
                        <%= form_tag( action: "creport") do%>
                          <%= radio_button_tag(:status, "0") %>
                          <%= label_tag(:status_child, " Prayer room no longer exist" ,class: "lovely-radio") %><br>
                          <%= radio_button_tag(:status, "1") %>
                          <%= label_tag(:status_adult, " Prayer room under renovation",class: "lovely-radio") %><br>
                          <%= radio_button_tag(:status, "2") %>
                          <%= label_tag(:status_adult, " Inappropiate content",class: "lovely-radio") %><br>
                          <%= submit_tag "SUBMIT" , :class => "youtube" %>
                        <% end %>
                      </div>
                    </div>
